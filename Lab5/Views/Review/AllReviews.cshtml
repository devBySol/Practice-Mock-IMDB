@model IEnumerable<Lab5.Models.Review>

<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h2 class="text-center mb-4">📜 All Movie Reviews</h2>

        @if (!Model.Any())
        {
            <p class="text-muted text-center">No reviews yet. Be the first to leave a review!</p>
        }
        else
        {
            <div class="row">
                @foreach (var review in Model)
                {
                    <div class="col-md-6 mb-3">
                        <div class="card shadow-sm p-3">
                            <div class="d-flex justify-content-between align-items-center">
                                <strong>@review.UserName</strong>
                                <span class="text-warning">⭐ @review.Rating / 5</span>
                            </div>
                            <p class="mb-2">@review.Comment</p>
                            <small class="text-muted">@review.DatePosted.ToString("yyyy-MM-dd HH:mm")</small>
                            <p class="text-muted"><strong>Movie:</strong> <a href="/Movie/Details/@review.Movie.Title">@review.Movie.Title</a></p>
                        </div>
                    </div>
                }
            </div>
        }

        <hr>

        <div class="d-flex justify-content-center mt-4">
            <a href="/Movie" class="btn btn-outline-secondary"> Back to Movies</a>
        </div>
    </div>
</div>
