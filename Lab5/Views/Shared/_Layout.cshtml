<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Lab5</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Lab5.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
</head>

<body>

    <!-- Navigation Bar -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-light w-100 @(ViewData["Title"] == "Home" ? "bg-transparent position-absolute top-0 start-0 w-100" : "bg-black")">
            <div class="container-fluid">
                <a class="navbar-brand ps-4" href="/">
                    <img src="https://upload.wikimedia.org/wikipedia/commons/6/69/IMDB_Logo_2016.svg" alt="IMDb Logo" height="40">
                </a>
                <button class="navbar-toggler border-0 p-2 rounded" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-center bg-transparent" id="navbarNav">
                    <ul class="navbar-nav gap-5">
                        <li class="nav-item"><a class="nav-link" asp-controller="Movie" asp-action="Movies">Movies</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Event" asp-action="Event">Event</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="News" asp-action="News">News</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Community" asp-action="Community">Community</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>


  
    @if (ViewData["Title"] == "Home")
    {
        <section class="hero-section">
            <div class="position-relative w-100 d-flex align-items-center justify-content-center"
                 style="background: url('https://universalpictures.ca/wp-content/uploads/2024/02/Universal_HomeMainCarousel_1920x1025-5.jpg') no-repeat center center/cover; height: 600px;">
                <div class="position-absolute top-50 end-50 p-lg-5 p-md-5 p-3 text-start text-white">
                    <h1 class="fw-bold display-4">THE WICKED</h1>
                    <p class="lead fs-6">ADVENTURE · MUSICAL · FANTASY</p>
                    <a href="https://www.youtube.com/watch?v=G-OnUavOiIQ" class="btn btn-warning btn-lg rounded-pill text-decoration-none text-dark fw-bold fs-6">
                        Watch Trailer <i class="bi bi-play-circle text-black"></i>
                    </a>
                </div>
            </div>
        </section>
    }

 
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="text-center mt-5 py-4 text-secondary">
        <p>&copy; 2025 - IMDb Sol - <a asp-controller="Home" asp-action="Privacy">Privacy</a></p>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
