@model Lab5.Models.ErrorViewModel
@inject Microsoft.AspNetCore.Hosting.IWebHostEnvironment Env

@{
    ViewData["Title"] = "Error";
    var environmentName = Env?.EnvironmentName ?? "Unknown";
    var isDevelopment = environmentName == "Development";
    var isStaging = environmentName == "Staging";
    var isProduction = environmentName == "Production";
    var isTesting = environmentName == "Testing";
}

<div class="container d-flex flex-column align-items-center justify-content-center mt-5 text-center">
    <div class="card shadow-lg p-4">
        <h1 class="text-danger">Something went wrong.</h1>
        <h2 class="text-muted">An error occurred while processing your request.</h2>

        @if (Model?.StatusCode != null)
        {
                    <p class="mt-3"><strong>Status Code:</strong> <span class="badge bg-danger fs-5
    ">@Model.StatusCode</span></p>
        }

        @if (Model?.RequestId != null)
        {
                    <p class="mt-3"><strong>Request ID:</strong> <span class="badge bg-info">@Model.RequestId</span></p>
        }

        @if (isDevelopment && !string.IsNullOrEmpty(Model?.ErrorMessage))
        {
                    <p class="mt-3 text-danger"><strong>Detailed Error:</strong> @Model.ErrorMessage</p>
        }
        else
        {
                    <p class="mt-3"><strong>If the issue persists, please contact support.</strong></p>
        }

        <p class="mt-3"><strong>Current Environment:</strong> <span class="badge bg-warning fs-5">@environmentName</span></p>
        <a href="/" class="btn btn-warning mt-3">Return to Home</a>
    </div>
</div>