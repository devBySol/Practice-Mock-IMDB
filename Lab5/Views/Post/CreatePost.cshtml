<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-warning text-white">
            <h4 class="mb-0">Create New Post</h4>
        </div>
        <div class="card-body">
            <form>
                <div class="mb-3">
                    <label for="title" class="form-label fw-bold">Title</label>
                    <input type="text" id="title" class="form-control" placeholder="Enter a catchy title" required>
                </div>
                <div class="mb-3">
                    <label for="userName" class="form-label fw-bold">Your Name</label>
                    <input type="text" id="userName" class="form-control" placeholder="Enter your name" required>
                </div>
                <div class="mb-3">
                    <label for="content" class="form-label fw-bold">Content</label>
                    <textarea id="content" class="form-control" rows="5" placeholder="Write something interesting..." required></textarea>
                </div>
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-outline-warning rounded-pill fw-bold px-4">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>
