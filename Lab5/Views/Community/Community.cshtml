@model IEnumerable<Lab5.Models.Post>

<div class="container p-5">
    <h2 class="text-dark fw-bold text-center">Movie Community</h2>
    <p class="p-1 text-muted text-center">Feel free to talk about movies with other enthusiasts!</p>

    <div class="fade show active" id="posts">
        <div class="text-end p-2">
            <a asp-controller="Post" asp-action="AddPost" class="btn btn-outline-warning rounded-pill">
                Create New Post
            </a>

        </div>
        <div class="bg-light p-4">
            <table class="table table-bordered text-center">
                <thead class="table-light">
                    <tr>
                        <th style="width: 10%;">No</th>
                        <th style="width: 20%;">Author</th>
                        <th style="width: 50%;">Title</th>
                        <th style="width: 20%;">Date</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="4" class="text-muted text-center">No posts yet. Be the first to share your thoughts!</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var post in Model.OrderByDescending(p => p.Id))
                        {
                            <tr>
                                <td>@post.Id</td>
                                <td>@post.UserName</td>
                                <td class="text-start">
                                    <a asp-controller="Post" asp-action="PostDetails" asp-route-id="@post.Id" class="text-decoration-none text-dark">
                                        @post.Title
                                    </a>
                                </td>
                                <td>@post.DatePosted.ToString("yyyy.MM.dd")</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
