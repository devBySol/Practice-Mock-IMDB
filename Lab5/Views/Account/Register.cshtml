@model Lab5.ViewModels.RegisterViewModel

<div class="d-flex justify-content-center align-items-center mt-5 px-3">
    <div class="card shadow-lg p-4 rounded-4 w-100" style="max-width: 500px;">
        <h2 class="text-center mb-4">Create an Account</h2>

        <div asp-validation-summary="All" class="text-danger small mb-3"></div>
        <form asp-controller="Account" asp-action="Register" method="post">
            <div class="mb-3">
                <label asp-for="UserName" class="form-label fw-bold">Username</label>
                <input asp-for="UserName" class="form-control rounded-3" placeholder="Enter your username" />
                <span asp-validation-for="UserName" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-bold">Email</label>
                <input asp-for="Email" class="form-control rounded-3" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="mb-3">
    <label asp-for="Password" class="form-label fw-bold">Password</label>
    <input asp-for="Password" type="password" class="form-control rounded-3" placeholder="Enter your password" />
    <small class="text-muted">Password must be at least 8 characters long and include an uppercase letter, a lowercase letter, and a number.</small>
    <span asp-validation-for="Password" class="text-danger small"></span>
</div>


            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label fw-bold">Confirm Password</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control rounded-3" placeholder="Re-enter your password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
            </div>

            <!-- Gender Dropdown -->
            <div class="mb-3">
                <label asp-for="Gender" class="form-label fw-bold">Gender</label>
                <select asp-for="Gender" class="form-select rounded-3">
                    <option value="">Select your gender</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                    <option value="Other">Other</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger small"></span>
            </div>

            <!-- City Input -->
            <div class="mb-3">
                <label asp-for="City" class="form-label fw-bold">City</label>
                <input asp-for="City" class="form-control rounded-3" placeholder="Enter your city" />
                <span asp-validation-for="City" class="text-danger small"></span>
            </div>

            <!-- Postal Code Input -->
            <div class="mb-3">
                <label asp-for="PostalCode" class="form-label fw-bold">Postal Code</label>
                <input asp-for="PostalCode" class="form-control rounded-3" placeholder="Enter your postal code" />
                <span asp-validation-for="PostalCode" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-warning w-100 py-2 rounded-3 fw-bold">Register</button>
        </form>

        <p class="text-center mt-3 mb-0">
            Already have an account? <a asp-controller="Account" asp-action="Login" class="text-decoration-none text-primary fw-bold">Login</a>
        </p>
    </div>
</div>
