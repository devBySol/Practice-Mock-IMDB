@model IEnumerable<Lab5.Models.Review>

<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h2 class="text-center mb-4">📝 Reviews for "@ViewBag.MovieTitle"</h2>

        <!-- 리뷰 목록 -->
        @if (!Model.Any())
        {
            <p class="text-muted text-center">No reviews yet. Be the first to leave a review!</p>
        }
        else
        {
            <div class="row">
                @foreach (var review in Model)
                {
                    <div class="col-md-6 mb-3">
                        <div class="card shadow-sm p-3">
                            <div class="d-flex justify-content-between align-items-center">
                                <strong>@review.UserName</strong>
                                <span class="text-warning">⭐ @review.Rating / 5</span>
                            </div>
                            <p class="mb-2">@review.Comment</p>
                            <small class="text-muted">@review.DatePosted.ToString("yyyy-MM-dd HH:mm")</small>
                        </div>
                    </div>
                }
            </div>
        }

        <hr>

        <!-- 리뷰 작성 폼 -->
        <div class="card shadow-lg p-4 mt-4">
            <h4 class="text-center mb-3">✍ Leave a Review</h4>
            <form method="post" action="/Movie/AddReview">
                <input type="hidden" name="MovieId" value="@ViewBag.MovieId" />

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Your Name:</label>
                        <input type="text" name="UserName" class="form-control" required />
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label">⭐ Rating (1-5):</label>
                        <input type="number" name="Rating" min="1" max="5" step="0.1" class="form-control" required />
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Your Review:</label>
                    <textarea name="Comment" class="form-control" rows="4" required></textarea>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-success">Submit Review</button>
                </div>
            </form>
        </div>

        <hr>

        <div class="d-flex justify-content-between mt-4">
            <a href="/Movie/Details/@ViewBag.MovieId" class="btn btn-outline-secondary">
               Back to Movie
            </a>
        </div>
    </div>
</div>
