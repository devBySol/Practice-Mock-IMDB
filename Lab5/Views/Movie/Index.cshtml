@model IEnumerable<Movie>

<div class="container mt-5">
    <div class="row">
        @foreach (var movie in Model)
        {
            <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                <div class="card shadow-sm border-0 rounded">
                    <img src="@movie.PosterUrl" class="card-img-top" style="height: 400px; object-fit: contain;" alt="@movie.Title Poster">
                    <div class="card-body text-center">
                        <h6 class="fw-bold">@movie.Title</h6>
                        <p class="text-secondary">@movie.Genre</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="text-warning fw-bold"><i class="bi bi-star-fill"> @movie.Rating</i></span>
                            <a asp-controller="Movie" asp-action="Details" asp-route-id="@movie.Id" class="btn btn-outline-warning btn-sm">View</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>